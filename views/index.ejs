<!DOCTYPE html>
<html>

<head>
    <title>Shoe Brand Generator</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body>
    <h1>Shoe Brand Generator</h1>
    <p>Enter your favorite brand of shoes:</p>
    <form>
        <input type="text" name="brand" id="brand" required>
        <button type="button" onclick="generateShoeList()">Generate Response</button>
    </form>
    <div id="shoeList"></div>
    <script>
        const generateShoeList = async () => {
            const input = document.getElementById("brand").value;
            const response = await axios.post("/generateShoeList", { input });
            document.getElementById("shoeList").innerText = response.data;
        };
    </script>
</body>

</html>